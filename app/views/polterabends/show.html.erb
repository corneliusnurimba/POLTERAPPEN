<div class="wrapper polterabend-card polterabend-card-grey">
  <div class="dp-wrapper">
    <div class="activities-box">
      <div class="activities-title-dp">
        <h2>Activities</h2>
        <button type="button" class="btn btn-primary dp-button" data-toggle="modal"
