<div class="modal fade add-activity" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div id="form-popup" class="modal-content">
      <%= simple_form_for Activity.new do |f| %>
      <%= f.error_notification %>
       <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :duration%>
        <%= f.input :cost %>
        </div>
        <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-primary'%>
      </div>
      <% end %>
    </div>
  </div>
</div>
